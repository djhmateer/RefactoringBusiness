                        cmd.Parameters.AddWithValue("&#64;Title", title);
                        cmd.Parameters.AddWithValue("&#64;Quote", quote);
                        connection.Open();
                        cmd.ExecuteNonQuery();
                    }
                }
            }
        }
    }
